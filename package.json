{
  "name": "astrbot-live2d-desktop",
  "version": "1.0.0-beta.4",
  "description": "AstrBot Live2D 桌面应用",
  "main": "dist-electron/main.js",
  "type": "module",
  "author": "",
  "license": "MIT",
  "keywords": [
    "electron",
    "vue3",
    "live2d",
    "astrbot"
  ],
  "scripts": {
    "dev": "vite",
    "typecheck": "vue-tsc --noEmit",
    "preview": "vite preview",
    "clean": "node -e \"const fs=require('fs');['release','dist','dist-electron'].forEach(p=>fs.existsSync(p)&&fs.rmSync(p,{recursive:true,force:true}));\"",
    "build": "npm run typecheck && vite build && electron-builder --publish never",
    "build:dir": "npm run typecheck && vite build && electron-builder --dir --publish never",
    "build:win": "npm run typecheck && vite build && electron-builder --win --publish never",
    "build:fast": "vite build && electron-builder --dir --publish never",
    "rebuild": "electron-builder install-app-deps",
    "postinstall": "electron-builder install-app-deps",
    "build:mac": "npm run typecheck && vite build && electron-builder --mac --publish never",
    "build:linux": "npm run typecheck && vite build && electron-builder --linux --publish never"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/language-core": "^3.2.4",
    "concurrently": "^8.2.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "sass": "^1.69.0",
    "sass-embedded": "^1.97.3",
    "typescript": "^5.3.0",
    "vite": "^5.4.0",
    "vite-plugin-electron": "^0.28.0",
    "vue-tsc": "^3.2.4",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@vueuse/core": "^10.7.0",
    "active-win": "^8.2.1",
    "axios": "^1.6.0",
    "better-sqlite3": "^9.2.0",
    "colorthief": "^2.6.0",
    "date-fns": "^3.0.0",
    "echarts": "^5.4.0",
    "electron-store": "^8.1.0",
    "howler": "^2.2.3",
    "katex": "^0.16.28",
    "lucide-vue-next": "^0.563.0",
    "marked": "^17.0.1",
    "naive-ui": "^2.37.0",
    "node-window-manager": "^2.2.4",
    "pinia": "^2.1.0",
    "pixi-live2d-display": "^0.4.0",
    "pixi.js": "^7.4.3",
    "simplex-noise": "^4.0.3",
    "uuid": "^9.0.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "ws": "^8.16.0"
  },
  "build": {
    "appId": "com.astrbot.live2d.desktop",
    "productName": "AstrBot Live2D",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "asar": true,
    "files": [
      "dist/**",
      "dist-electron/**",
      "resources/icon.png",
      "resources/icon.ico",
      "package.json",
      "!**/*.map",
      "!**/*.ts",
      "!**/*.tsx",
      "!**/*.vue",
      "!**/*.md",
      "!**/*.log",
      "!**/node_modules/*/{test,tests,__tests__,docs,doc,example,examples}/**",
      "!**/node_modules/.cache/**"
    ],
    "asarUnpack": [
      "**/*.node",
      "node_modules/better-sqlite3/**",
      "node_modules/node-window-manager/**"
    ],
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "win": {
      "icon": "resources/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AstrBot Live2D",
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable-${arch}.${ext}"
    },
    "compression": "maximum",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}
