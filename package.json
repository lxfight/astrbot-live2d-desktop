{
  "name": "astrbot-live2d-desktop",
  "version": "0.1.0",
  "description": "AstrBot Live2D 桌面应用",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "build:dir": "vue-tsc --noEmit && vite build && electron-builder --dir",
    "build:win": "vue-tsc --noEmit && vite build && electron-builder --win",
    "build:fast": "vite build && electron-builder --dir",
    "preview": "vite preview",
    "electron:dev": "echo '请使用 npm run dev 启动开发环境（vite-plugin-electron 会自动启动 Electron）'",
    "electron:build": "vite build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "typecheck": "vue-tsc --noEmit"
  },
  "keywords": [
    "electron",
    "vue3",
    "live2d",
    "astrbot"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electron-rebuild": "^3.2.9",
    "sass": "^1.69.0",
    "sass-embedded": "^1.97.3",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vue-tsc": "^1.8.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@vueuse/core": "^10.7.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^9.2.0",
    "date-fns": "^3.0.0",
    "echarts": "^5.4.0",
    "electron-store": "^8.1.0",
    "howler": "^2.2.3",
    "katex": "^0.16.28",
    "marked": "^17.0.1",
    "naive-ui": "^2.37.0",
    "pinia": "^2.1.0",
    "uuid": "^9.0.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "ws": "^8.16.0"
  },
  "build": {
    "appId": "com.astrbot.live2d.desktop",
    "productName": "AstrBot Live2D",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!node_modules/**/*",
      "node_modules/better-sqlite3/**/*"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AstrBot Live2D"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "compression": "maximum",
    "asar": true
  }
}
